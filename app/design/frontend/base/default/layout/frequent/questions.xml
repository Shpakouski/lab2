    </frequent_questions_index_view>
    <default>
        <reference name="footer_links">
            <block type="frequent_questions/template_links" name="footer_links">
                <action method="setTemplate">
                    <template>frequent/template/mylinks.phtml</template>
                </action>
            </block>
        </reference>
    </default>
</layout>
